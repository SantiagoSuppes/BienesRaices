extends ../layouts/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-500(placeholder="Email" type= "email" name= "email")
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-500(placeholder="Contraseña" type= "password" name= "password")

                    div.flex.items-center.justify-between.px-2
                        a.text-gray-400.text-xs(href="./registro") No tengo cuenta
                        a.text-gray-400.text-xs(href="./olvide-password") Olvide mi contraseña


                    input(class="w-full py-2 bg-indigo-300 hover:bg-indigo-200 text-gray-700 cursor-pointer rounded-md" type= "submit" value= "Iniciar Sesion")