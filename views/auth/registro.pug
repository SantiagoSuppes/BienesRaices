extends ../layouts/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-500(placeholder="Nombre" type= "text" name= "nombre")

                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-500(placeholder="Email" type= "email" name= "email") 
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="password") Contrase単a
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-500(placeholder="Contrase単a" type= "password" name= "password")
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="repetir_password") Repetir Contrase単a
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-500(placeholder="Repetir Contrase単a" type= "password" name= "repetir_password")

                    div.flex.items-center.justify-between.px-2
                        a.text-gray-400.text-xs(href="./login") Ya tengo cuenta 

                    input(class="w-full py-2 bg-indigo-300 hover:bg-indigo-200 text-gray-700 cursor-pointer rounded-md" type= "submit" value= "Crear cuenta")